										{{ form_widget(form) }}
									</br>
									<div>
										<input class="btn btn-warning" type="submit" value="{{ 'Guarda'|trans }}" />
									</div>
									{{ form_end(form) }} 
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	{% endblock %}
