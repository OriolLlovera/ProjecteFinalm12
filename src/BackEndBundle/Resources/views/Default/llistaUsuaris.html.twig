{% extends "BackEndBundle:Default:index.html.twig " %}
{% block title %}Llista usuaris{% endblock %}
{% block page_content %}
    <h4>{{ titol }}</h4>
    <table id="mytable" class="table table-bordred table-striped">
        <thead>
            <th>DNI</th>
            <th>Nom</th>
            <th>1r cognom</th>
            <th>2n cognom</th>
            <th>Correu</th>
            <th>NÂº traduccions</th>
            <th>Rol</th>
            <th>Editar</th>
            <th>Eliminar</th>
        </thead>
        <tbody>
            {% for category in usuari %}
                <tr>
                    <th>{{ category.dni|upper }}</th>
                    <td>{{ category.nom }}</td>
                    <td>{{ category.cognom1 }}</td>
                    <td>{{ category.cognom2 }}</td>
                    <td>{{ category.correu }}</td>
                    <td>{{ category.numTraduccions }}</td>
                    <td>{{ category.rol }}</td>
                    
                    <td>
                        <p data-placement="top" data-toggle="tooltip" title="Editar">
                            <a href="" class="btn btn-primary btn-xs" ><span class="glyphicon glyphicon-pencil"></span></a>
                        </p>
                    </td>
                    <td>
                        <p data-placement="top" data-toggle="tooltip" title="Eliminar">
                            <a href="" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash"></span></a>
                        </p>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="row">
        <div class="col-sm-12 col-lg-12 col-md-12">
            <a href="" class="btn btn-info" role="button">Afegir usuari</a>
        </div>
    </div>
{% endblock %}