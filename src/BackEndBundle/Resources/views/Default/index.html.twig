<!DOCTYPE html>

<html lang="es">

<head>

  <meta charset="utf-8">

  <meta http-equiv="X-UA-Compatible" content="IE=edge">

  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>{% block title %}Administració{% endblock %}</title>

  {% block stylesheets %}

    <link href="{{ asset('public/backend/css/bootstrap.min.css') }}" rel="stylesheet">

    <link href="{{ asset('public/backend/css/shop-homepage.css') }}" rel="stylesheet">

    <link href="{{ asset('public/backend/css/usuaris.css') }}" rel="stylesheet">

    <link href="{{ asset('public/backend/css/login.css') }}" rel="stylesheet">       

    <link href="{{ asset('public/backend/css/estilsuserllista.css') }}" rel="stylesheet"> 


    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"> 

    <!-- Select2 -->

    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet" /> 

  {% endblock %}

</head>

<body>

  {% block body %}

    {% block navigation %}

      <nav class="navbar navbar-inverse navbar-static colorlletranav" role="navigation">

        <div class="container">

          <div class="navbar-header">

            <a class="navbar-brand" href="{{ path('exchangeit_back_end_homepage') }}">BACKEND</a>

          </div>

          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

            <ul class="nav navbar-nav">

              <li>

                <a href="{{path('exchangeit_back_end_llistaUsuaris')}}">Llista usuaris</a>

              </li>

              <li>

                <a href="{{path('exchangeit_back_end_llistaIdiomes')}}">Llista idiomes</a>

              </li>

              <li>

               <a href="{{path('exchangeit_back_end_llistaCatGramatical')}}">Llista categories gramaticals</a><br>

             </li>

             <li>

               <a href="{{path('exchangeit_back_end_llistaCatFamilia')}}">Llista categories families</a>

             </li>

             {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}

              <li>

                 <a href="{{path('exchangeit_back_end_usuari_edit',{'id':app.user.id})}}"> {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}</a>

              </li>

              <li>

                <a href="{{ path('fos_user_security_logout') }}">

                    {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}

                </a>

              </li>

              {% else %}

                <li>               

                <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>

              </li>

               {% endif %}

          </ul>

        </div>

      </div>

    </nav>

  {% endblock %}

  {% block page_content %}

    <div class="container-fluid">

      <div class="row">

        <div class="col-md-12">

         <h4>BACKEND - Manteniment d'idiomes.</h4>

        <div>{% include 'FOSCommentBundle:Thread:async.html.twig' with {'id': 'foo'} %}</div>

       </div>

     </div>

   </div>

 {% endblock %}

 <div class="container-fluid">



  <!-- Footer -->

  <footer id="myFooter">



    <div class="footer-copyright">

      <p>© 2017 Copyright ExchangeIt </p>

    </div>

  </footer>

</div>

{% endblock %}

{% block javascripts %}

  <script src="{{ asset('public/backend/js/jquery.js') }}"></script>

  <script src="{{ asset('public/backend/js/bootstrap.min.js') }}"></script>

  <script src="{{ asset('public/backend/js/scriptfiltreuser.js') }}"></script>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js"></script>

  <script type="text/javascript">


  $('select22').select2();

</script>

{% endblock %}

</body>

</html>





